

<div class="container">
<h2>All users:</h2>

    <% @users.each do |user| %>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>

        <div class = "admin">
            <% if current_user.admin? && !current_user?(user) %>
                <%= button_to "delete", user, method: :delete %>
            <% end %>
        </div>
        
        <hr>
    <% end %>
<%= will_paginate @users %>
</div>




